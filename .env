# --------------------------------------
# Application Settings
# --------------------------------------
ENVIRONMENT=development
DEBUG=true
APP_NAME=Document Uploader API
APP_VERSION=1.0.0
MAX_FILE_SIZE=10485760                     # 10MB
ALLOWED_EXTENSIONS=.pdf,.txt,.json
UPLOAD_DIR=uploads

# --------------------------------------
# MinIO Configuration
# --------------------------------------
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=minio:9000                 # Use container name, not localhost
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false
MINIO_BUCKET=documents

# --------------------------------------
# Database Configuration
# --------------------------------------
MONGODB_URL=mongodb://admin:password123@mongodb:27017/document_service?authSource=admin
DATABASE_NAME=document_service

# --------------------------------------
# RabbitMQ Configuration
# --------------------------------------
RABBITMQ_URL=amqp://admin:password@rabbitmq:5672/
RABBITMQ_QUEUE=document_processing
RABBITMQ_EXCHANGE=document_events
RABBITMQ_ROUTING_KEY=document.process
